<h1>Профиль</h1>

<div class="row">
    <div class="col s4">
        {{#if profileError}}
        <p class="alert">{{profileError}}</p>
        {{/if}}
        <form action="/profile" method="post" enctype="multipart/form-data">
            <div class="input-field">
                <input id="email" name="email" type="text" class="validate" required value="{{user.email}}">
                <label for="email">Ваш email</label>
                <span class="helper-text" data-error="Email не может быть пустым"></span>
            </div>
            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" required value="{{user.name}}">
                <label for="name">Ваше имя</label>
                <span class="helper-text" data-error="Имя не может быть пустым"></span>
            </div>

            <div class="reset-div">
                <a href="/profile/changePassword">Смена пароля</a>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button type="submit" class="btn">Изменить</button>
        </form>

    </div>

    {{#if isStudent}}
    <div class="col s8">
        <h4>Ваши ответы</h4>
        {{#each answers}}
        <div class="card">
            <div class="card-content">
                <div class="row">
                    <div class="col s2">
                        <label for="task">Работа</label>
                        <h5 id="task" class="answer-card"><a href="/task/{{ask.taskId._id}}">{{ask.taskId.name}}</a></h5>
                    </div>
                    <div class="col s2" style="text-align: center;">
                        <label for="variant">Вариант</label>
                        <h5 id="variant"><a href="/task/{{ask.taskId._id}}/{{ask.variant.number}}">{{ask.variant.number}}</a></h5>
                    </div>
                    <div class="col s2">
                        <label for="theme">Тема</label>
                        <h5 id="theme" class="answer-card"><a href="/task/{{ask.taskId._id}}/{{ask.variant.number}}/{{ask.subTaskId._id}}">{{ask.subTaskId.name}}</a>
                        </h5>
                    </div>
                    <div class="col s2">
                        <label for="ask">Вопрос</label>
                        <h5 id="ask" class="answer-card"><a href="/answer/{{ask.id}}">{{ask.askText}}</a>
                        </h5>
                    </div>
                    <div class="col s2">
                        <label for="answer">Ваш ответ</label>
                        {{#if ask.isTable}}
                        <h5 id="answer">Табличный ответ</h5>
                        {{else}}
                        <h5 id="answer">{{answer}}</h5>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>