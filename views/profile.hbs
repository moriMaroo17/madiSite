<h1>Профиль</h1>

<div class="row">
    <div class="col s6">
        <form action="/profile" method="post" enctype="multipart/form-data">
            <div class="input-field">
                <input id="email" name="email" type="text" class="validate" required value="{{user.email}}">
                <label for="email">Ваш emali</label>
                <span class="helper-text" data-error="Email не может быть пустым"></span>
            </div>
            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" required value="{{user.name}}">
                <label for="name">Ваше имя</label>
                <span class="helper-text" data-error="Имя не может быть пустым"></span>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button type="submit" class="btn">Изменить</button>
        </form>
    </div>
    {{#if isStudent}}
    <div class="col s6">
        <h4>Ваши ответы</h4>
        {{#each answers}}
        <div class="card">
            <div class="card-content">
                <div class="row">
                    <div class="col s3">
                        <label for="task">Работа</label>
                        <h5 id="task"><a href="/task/{{taskId.id}}">{{taskId.name}}</a></h5>
                    </div>
                    <div class="col s3">
                        <label for="variant">Вариант</label>
                        <h5 id="variant"><a href="/task/{{taskId.id}}/{{variant}}">{{variant}}</a></h5>
                    </div>
                    <div class="col s3">
                        <label for="theme">Тема</label>
                        <h5 id="theme"><a href="/task/{{taskId.id}}/{{variant}}/{{subTaskId.id}}">{{subTaskId.name}}</a></h5>
                    </div>
                    <div class="col s3">
                        <label for="answer">Ваш ответ</label>
                        <h5 id="answer">{{answer}}</h5>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>