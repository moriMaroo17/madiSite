<h1>Главная администратора</h1>

<a href="/auth/register"><button class="btn btn-primary btn-action btn-lg">Добавить аккаунт</button></a>

<div class="row">
    <div class="col s4">
        <h3>Студенты</h3>
        <table>
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                {{#each students}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                    {{#if reset}}
                    <td><a href="/admin/drop/{{id}}"><button class="btn btn-primary btn-action btn-lg reset-button">Сбросить пароль</button></a></td>
                    {{else}}
                    <td><button class="btn disabled btn-primary btn-action btn-lg reset-button">Сбросить пароль</button></td>
                    {{/if}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="col s4">
        <h3>Преподаватели</h3>
        <table>
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each teachers}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                    {{#if reset}}
                    <td><a href="/admin/drop/{{id}}"><button class="btn btn-primary btn-action btn-lg reset-button">Сбросить пароль</button></a></td>
                    {{else}}
                    <td><button class="btn disabled btn-primary btn-action btn-lg reset-button">Сбросить пароль</button></td>
                    {{/if}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="col s4">
        <h3>Администраторы</h3>
        <table>
            <thead>
                <tr>
                    <th>Имя</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                {{#each admins}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                    {{#if reset}}
                    <td><a href="/admin/drop/{{id}}"><button class="btn btn-primary btn-action btn-lg reset-button">Сбросить пароль</button></a></td>
                    {{else}}
                    <td><button class="btn disabled btn-primary btn-action btn-lg reset-button">Сбросить пароль</button></td>
                    {{/if}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>