<h1>Добро пожаловать</h1>

<p>Сайт в разработке</p>

{{#each tasks}}
<div class="row">
    <div class="col s12 m6">
        <div class="card darken-1">
            <div class="card-content">
                <span class="card-title">{{name}}</span>
                {{#if content.subTasks}}
                <p>Список тем</p>
                <hr>
                <ul class="collection">
                    {{#each content.subTasks}}
                    <li class="collection-item">{{name}}</li>
                    {{/each}}
                </ul>
                {{else}}
                <hr>
                <p>Тем для работы еще не добавлено</p>
                {{/if}}
            </div>
            <div class="card-action course-task">
                <form action="task/{{id}}" method="get">
                    <div class="input-field">
                        <select class="browser-default" name="variant" id="variant">
                            <option value="" disabled selected>Выберите вариант</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                    <button class="btn waves-effect waves-light">Submit
                        <i class="material-icons right">send</i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{{/each}}