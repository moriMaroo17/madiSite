<h1>{{subTaks.name}}</h1>
<h2>Успехов с выполнением задания</h2>

<div>
    {{#if subTask.filePath}}
    <p>Прикрепленный файл: <a href="/{{subTask.filePath}}" download="{{subTask.name}}">{{fileName}}</a></p>
    {{else}}
    <p>Файл для работы не был добавлен</p>
    {{/if}}
</div>

<div>
    <h5>Текст задачи</h5>
    <p>{{subTask.taskText}}</p>
</div>

{{#if subTask.answer}}
<form action="/answer" method="post" class="answer-form">
    <input type="hidden" name="taskId" value="{{@root.taskId}}">
    <input type="hidden" name="variantNumber" value="{{@root.variantNumber}}">
    <input type="hidden" name="subTaskId" value="{{subTask.id}}">
    <div class="input-field col s6">
        <input id="answer" name="answer" type="text" value="{{@root.answer.answer}}">
        <label for="first_name">Ответ</label>
    </div>
    {{#if @root.answer}}
    <input type="hidden" name="answerId" id="answerId" value="{{@root.answer.id}}">
    {{/if}}
    <button class="btn waves-effect waves-light" type="submit" name="action">Отправить ответ
        <i class="material-icons right">send</i>
    </button>
</form>
{{/if}}

<a href="./">
    <button class="btn waves-effect waves-light">Назад</button>
</a>